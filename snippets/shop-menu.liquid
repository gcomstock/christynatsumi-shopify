{% for link in linklists.shop-menu.links %}
  <li {% if link.active %}class="active"{% endif %}>
    {% if link.url == '/cart' %}
      <a href="/cart" class="cn-header__sectnav__cart">Cart: <span class="cart-count">{{ cart.item_count }}</span> </a>
    {% else %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endif %}
  </li>
{% endfor %}